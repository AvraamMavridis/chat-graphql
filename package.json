{
  "name": "movies-pwa",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run clean && webpack-dev-server --env=local",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "build:production": "npm run clean && NODE_ENV=production webpack -p --env=production --progress",
    "deploy": "npm run build:production && npm run surge",
    "surge": "surge -p build/ --domain https://moviespwa.surge.sh",
    "clean": "rm -rf build/",
    "gzip": "npm run gulp -- gzip",
    "gulp": "gulp",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "verbose": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.jsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/bin/"
    ],
    "automock": false,
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "text",
      "html"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react)"
    ],
    "moduleNameMapper": {
      "\\.(scss|sass|css)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "latest",
    "babel-eslint": "latest",
    "babel-loader": "latest",
    "babel-polyfill": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-react": "latest",
    "babel-preset-stage-0": "latest",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.0",
    "cssnano": "^3.10.0",
    "duplicate-package-checker-webpack-plugin": "^1.2.4",
    "enzyme": "^2.9.1",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-config-mycs": "^1.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^3.16.1",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^2.1.0",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^0.11.1",
    "gulp": "^3.9.1",
    "gulp-gzip": "^1.4.0",
    "happypack": "^3.0.3",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^3.3.0",
    "jest": "^20.0.4",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.5.2",
    "optimize-css-assets-webpack-plugin": "^1.3.1",
    "postcss-loader": "^1.3.3",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^1.3.0",
    "react-inlinesvg": "^0.5.5",
    "react-test-renderer": "^15.4.2",
    "sass-loader": "^6.0.3",
    "sass-resources-loader": "^1.2.1",
    "style-loader": "^0.16.1",
    "svg-inline-loader": "^0.7.1",
    "webpack": "AvraamMavridis/webpack#v2.2.1-harmony",
    "webpack-babel-jest": "latest",
    "webpack-browser-plugin": "^1.0.20",
    "webpack-build-notifier": "^0.1.13",
    "webpack-bundle-analyzer": "^2.3.0",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-server": "^2.4.1",
    "webpack-hot-middleware": "^2.10.0",
    "whatwg-fetch": "^2.0.3",
    "write-file-webpack-plugin": "^4.0.2"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-highlight": "^0.10.0",
    "react-router": "^4.1.2",
    "react-router-dom": "^4.1.2",
    "react-syntax-highlighter": "^5.6.2",
    "rxjs": "^5.4.2",
    "scroll-to-element": "^2.0.0",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "universal-router": "^3.2.0"
  }
}
